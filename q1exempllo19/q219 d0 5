/*
ler um vetor de inteiros e apresentar os n√∫meros pares
*/

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define TAM 10
#define MX 10

int main(){

srand(time(NULL));

int v[TAM];
int *pv;
pv = v;

//preencher o vetor
for(int k = 0; k<TAM; k++){
    *(pv+k) = rand()%MX;
}

for(int k =0; k<TAM; k++){
    printf("%d ", *(pv+k));
}

printf("\n");

//numeros pares
for(int k = 0; k<TAM; k++){
    if(*(pv + k)% 2 == 0){
        printf("%d", *(pv+k));
    }
}

return 0;
}
